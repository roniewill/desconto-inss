<% if user_signed_in? %>
    <div class="row justify-content-center">

        <div class="col-5 mt-4 bg-light border rounded-3">

            <div class="mt-3">

                <h2>Perfil</h2>

            </div>

            <p class="lead">Nome: <% if current_user.first_name? %><%= current_user.first_name %><% else %> SEM NOME<% end %></p>
            <p class="lead">Sobrenome: <% if current_user.last_name? %><%= current_user.last_name %><% else %> SEM SOBRENOME<% end %></p>
            <p class="lead">E-mail: <%= current_user.email %></p>
            <p class="lead">Data de cadastro: <%= current_user.created_at.strftime('%d/%m/%Y') %></p>
            <p class="lead">Ultima atualização: <%= current_user.updated_at.strftime('%d/%m/%Y') %></p>
            <p><%= link_to "Edite seus dados", edit_user_registration_path(current_user), data: { turbo_method: :get }, class: "btn btn-secondary" %></p>
        </div>
    </div>
<% end %>