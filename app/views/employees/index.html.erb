
<div class="row justify-content-center">

  <div class="mt-4 bg-light border rounded-3">
    <div class="mt-3">

        <h2>Funcionários</h2>

        <%= link_to "Cadastrar Novo", new_employee_path, class: "link-offset-2" %>

    </div>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Sobrenome</th>
          <th scope="col">CPF</th>
          <th scope="col">Celular</th>
          <th scope="col">Salário</th>
          <th scope="col">INSS</th>
          <th scope="col"><i class="bi bi-gear"></i></th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <th scope="row"><%= employee.id %></th>
            <th scope="row"><%= employee.first_name %></th>
            <th scope="row"><%= employee.last_name %></th>
            <th scope="row"><%= employee.cpf %></th>
            <th scope="row"><%= employee.phone_number_one %></th>
            <th scope="row"><%= employee.salary %></th>
            <th scope="row"><%= employee.inss %></th>
            <th scope="row">
              <%= link_to "Ver", employee_path(employee), data: { turbo_method: :get }, class: "btn btn-info" %>
              <%= link_to "Editar", edit_employee_path(employee), data: { turbo_method: :get }, class: "btn btn-secondary" %>
              <% if current_user.role == 'admin' %>
                <%= button_to "Excluir", employee, method: :delete %>
              <% end %>
            </th>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>

</div>
