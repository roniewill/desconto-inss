<div class="row justify-content-center">

   <div class="col-5">

     <div class="mt-3">

       <h2>Atualizar seus dados</h2>

     </div>

     <%= render "users/shared/error_messages", resource: resource %>

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |form| %>

        <div class="form-group row mt-3">

          <%= form.label :first_name, "Nome" %>

          <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "Digite seu primeiro nome" %>

        </div>

        <div class="form-group row mt-3">

          <%= form.label :last_name, "Sobrenome" %>

          <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "Digite seu sobrenome" %>

        </div>

        <div class="form-group row mt-3">

          <%= form.label :email, "Email" %>

          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu endereço de e-mail" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></div>
          <% end %>

        </div>

        <div class="form-group row mt-3">
          <%= form.label :password, "Nova Senha" %> <i>(deixe em branco se não quiser alterar)</i><br />
          <%= form.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Digite a senha" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> minimu de caracteres</em>
          <% end %>
        </div>

        <div class="form-group row mt-3">

          <%= form.label :password_confirmation, "Confirme a Senha" %>

          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirme a senha" %>

        </div>

        <div class="form-group row mt-3">

          <%= form.label :current_password, "Senha atual" %> <i>(precisamos da sua senha atual para confirmar suas alterações)</i>

          <%= form.password_field :current_password,  autocomplete: "current-password", class: "form-control", placeholder: "Senha atual" %>

        </div>

        <div class=" form-group row mt-3">

         <%= form.submit "Atualizar", class: "btn btn-primary" %>

        </div>

        <div class=" form-group row mt-3">

          <%= link_to "Retornar", :back, class: "btn btn-secondary" %>

        </div>

     <% end %>


   </div>


 </div>