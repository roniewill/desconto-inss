<div class="row justify-content-center">

   <div class="col-5">

     <div class="mt-3">

       <h1>Login</h1>

     </div>

     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

        <div class="form-group row mt-3">

          <%= form.label :email, "Email" %>

          <%= form.text_field :email, class: "form-control", placeholder: "Digite seu e-mail" %>

        </div>

        <div class="form-group row mt-3">

          <%= form.label :password, "Password"%>

          <%= form.password_field :password, class: "form-control", placeholder: "Sua senha" %>

        </div>

        <div class=" form-group row mt-3">

         <%= form.submit "Entrar", class: "btn btn-primary" %>

        </div>

     <% end %>

     <%= render "users/shared/links" %>

   </div>

 </div>